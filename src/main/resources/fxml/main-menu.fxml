<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>

<StackPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.morpion.client.controller.MainMenuController" >
   <children>
      <Rectangle fill="#ecf0f1" arcHeight="30.0" arcWidth="30.0" height="480.0" width="480.0" stroke="#3498db" strokeWidth="2.0">
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
      </Rectangle>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="480.0" minWidth="480.0" prefHeight="480.0" prefWidth="480.0">
         <center>
            <VBox alignment="CENTER" spacing="25.0" BorderPane.alignment="CENTER">
               <children>
                  <Label styleClass="game-title" text="JEU DE MORPION">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <Label styleClass="game-subtitle" text="Choisissez un mode de jeu">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" bottom="15.0" />
                     </VBox.margin>
                  </Label>
                  <Button fx:id="aiGameButton" mnemonicParsing="false" onAction="#handleAIGameButton" styleClass="menu-button" text="Jouer contre l'ordinateur">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="networkGameButton" mnemonicParsing="false" onAction="#handleNetworkGameButton" styleClass="menu-button" text="Jeu en Réseau">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExitButton" styleClass="menu-button" text="Quitter">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Button>
                  <Label text="© 2025 - Jeu de Morpion Réseau" textFill="#9e9e9e">
                     <font>
                        <Font size="11.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="40.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </center>
      </BorderPane>
   </children>
</StackPane>